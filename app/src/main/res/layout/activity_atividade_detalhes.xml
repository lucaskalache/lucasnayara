<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.fcg1400019442.oboticario.AtividadeDetalhes">

    <TextView android:text="@string/hello_world" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/detalhe_de_texto" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/texto_data"
        android:layout_marginTop="36dp"
        android:layout_below="@+id/detalhe_de_texto"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/texto_nome"
        android:layout_below="@+id/texto_data"
        android:layout_marginTop="32dp"
        android:layout_alignRight="@+id/texto_data"
        android:layout_alignEnd="@+id/texto_data" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/texto_descricao"
        android:layout_below="@+id/texto_nome"
        android:layout_marginTop="23dp"
        android:layout_alignRight="@+id/texto_nome"
        android:layout_alignEnd="@+id/texto_nome" />


</RelativeLayout>
